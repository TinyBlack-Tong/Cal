<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/black" />

    <!--<Button-->
    <!--android:id="@+id/c1"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="#000"-->
    <!--android:text="点我"-->
    <!--android:textColor="#ffff"/>-->
    <!--<Button-->
    <!--android:id="@+id/c2"-->
    <!--android:layout_toRightOf="@+id/c1"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="#000"-->
    <!--android:text="点我2"-->
    <!--android:textColor="#ffff"/>-->

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#E8EBF1"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textSize="20sp"
            android:maxLines="1"
            android:hint="MR.tong"


            />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_marginTop="70dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:textColor="#FFFF"
            android:text="7" />

        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:text="4"
            android:textColor="#FFFF"/>

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="1"
            android:textColor="#FFFF"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/l2"
        android:orientation="vertical">

        <Button
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:text="8"
            android:textColor="#FFFF"/>

        <Button
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:text="5"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:text="2" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/l4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/l3"
        android:orientation="vertical">

        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"

            android:text="9"
            android:textColor="#FFFF"/>

        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"

            android:text="6"
            android:textColor="#FFFF"/>

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"

            android:text="3"
            android:textColor="#FFFF"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/l5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l2"
        android:orientation="horizontal">

        <Button

            android:id="@+id/b0"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="0"
            android:textColor="#FFFF"
            android:gravity="center_horizontal"

            />

        <Button
            android:id="@+id/bpoint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"

            android:background="@android:color/transparent"
            android:textSize="20sp"
            android:text="."
            android:textColor="#FFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l6"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/l4"
        android:layout_below="@+id/l1"
        android:orientation="vertical">

        <Button
            android:id="@+id/b_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:text="+"
            android:textColor="#F57C00" />

        <Button
            android:id="@+id/b_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:text="-"
            android:textColor="#F57C00" />

        <Button
            android:id="@+id/b_mul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:text="*"
            android:textColor="#F57C00" />
        <Button
            android:id="@+id/b_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:text="/"
            android:textColor="#F57C00" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/l6"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >



    </LinearLayout>

    <LinearLayout
        android:id="@+id/l7"
        android:layout_below="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/b_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textSize="20sp"
            android:text="C"
            android:textColor="#F57C00" />

        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/b_sin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textSize="20sp"
            android:text="sin"
            android:textColor="#FFFF" />

        <Button

            android:id="@+id/b_cos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:text="cos"
            android:textColor="#FFFF" />

        <Button

            android:id="@+id/b_tan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="tan"
            android:textColor="#FFFF" />



    </LinearLayout>





    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/l8"
        android:layout_below="@+id/l1"
        android:layout_toRightOf="@+id/l7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button

            android:id="@+id/b_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="x^2"
            android:textColor="#FFFF" />

        <Button

            android:id="@+id/b_tenSquare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="10^X"
            android:textColor="#FFFF" />
        <Button

            android:id="@+id/b_fac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="X!"
            android:textColor="#FFFF" />
    </LinearLayout>
<LinearLayout
    android:id="@+id/l9"
    android:layout_marginTop="230dp"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_toRightOf="@+id/l7"
    android:layout_below="@+id/l1">

    <Button
        android:layout_gravity="center"
        android:id="@+id/b_result"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        android:text="="
        android:textColor="#F57C00" />

</LinearLayout>
    <LinearLayout
        android:id="@+id/l10"
        android:layout_width="wrap_content"
        android:layout_below="@+id/l8"
        android:layout_toRightOf="@+id/l7"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/b_pow"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="a^b"
            android:layout_marginTop="20dp"
            android:textColor="#FFF"
            android:textSize="30dp"/>
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/b_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="("
            android:layout_marginTop="20dp"
            android:textColor="#FFF"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/b_right"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text=")"
            android:layout_marginTop="20dp"
            android:textColor="#FFF"
            android:textSize="30dp"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/l11"
        android:layout_width="wrap_content"
        android:layout_below="@+id/l10"
        android:layout_toRightOf="@+id/l7"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/b_two"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="(X)二进制转化"

            android:textColor="#FFF"
            android:textSize="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_toRightOf="@+id/l7"
        android:layout_below="@+id/l11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="center"
        android:id="@+id/b_sixteen"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="(X)16进制转化"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:textSize="20dp"/>


    </LinearLayout>



</RelativeLayout>